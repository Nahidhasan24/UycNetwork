<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.Login"
    android:orientation="vertical"
    android:background="@drawable/bgtow">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/uyccointow"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UYC NETWORK"
        android:textColor="#FFFFFF"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        />


    <EditText
        android:id="@+id/regName"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="18dp"
        android:textColorHint="#050505"
        android:hint="Full name:-"
        android:textStyle="italic"
        android:inputType="textPersonName"
        android:fontFamily="monospace"
        android:background="@drawable/background_gradiant"
        android:padding="5dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:id="@+id/regNumber"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="18dp"
        android:textColorHint="#050505"
        android:hint="Number:-"
        android:inputType="text"
        android:textStyle="italic"
        android:fontFamily="monospace"
        android:background="@drawable/background_gradiant"
        android:padding="5dp"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:id="@+id/regEmail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="18dp"
        android:textColorHint="#050505"
        android:hint="Email:-"
        android:inputType="textEmailAddress"
        android:textStyle="italic"
        android:fontFamily="monospace"
        android:background="@drawable/background_gradiant"
        android:padding="5dp"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:id="@+id/regPassword"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="18dp"
        android:textColorHint="#050505"
        android:hint="Password:-"
        android:inputType="number"
        android:textStyle="italic"
        android:fontFamily="monospace"
        android:background="@drawable/background_gradiant"
        android:padding="5dp"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:id="@+id/regConPassword"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="18dp"
        android:textColorHint="#050505"
        android:hint="Confirm Password:-"
        android:inputType="number"
        android:textStyle="italic"
        android:fontFamily="monospace"
        android:background="@drawable/background_gradiant"
        android:padding="5dp"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:id="@+id/registerbtn"
        android:layout_marginTop="30dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Register"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5sp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="You have an account ?"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sendRegisterBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20sp"
            android:fontFamily="serif"
            android:text="Log in"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>